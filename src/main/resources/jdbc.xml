<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd ">

    <!-- Initialization for data source -->
    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url"
                  value="jdbc:mysql://localhost:3306/personal_blog?useUnicode=true&amp;characterEncoding=UTF-8&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=CTT"/>
        <property name="username" value="root"/>
        <property name="password" value="Mysql520.."/>
    </bean>

    <!-- 配置评论数据库 -->
    <bean id="commentDataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url"
                  value="jdbc:mysql://localhost:3306/pblog_comment?useUnicode=true&amp;characterEncoding=UTF-8&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=CTT"/>
        <property name="username" value="root"/>
        <property name="password" value="Mysql520.."/>
    </bean>

    <!-- Definition for userInfoJdbcTemplate bean -->
    <bean id="userInfoJdbcTemplate"
          class="com.ajobs.impdaos.UserInfoJdbcTemplate"
          scope="singleton">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <!-- Definition for articleInfoJdbcTemplate bean -->
    <bean id="articleInfoJdbcTemplate"
          class="com.ajobs.impdaos.ArticleInfoJdbcTemplate"
          scope="singleton">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <!-- Definition for ownerJdbcTemplate bean -->
    <bean id="ownerJdbcTemplate"
          class="com.ajobs.impdaos.OwnerJdbcTemplate"
          scope="singleton">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <!-- Definition for pictureInfoJdbcTemplate bean -->
    <bean id="pictureInfoJdbcTemplate"
          class="com.ajobs.impdaos.PictureInfoJdbcTemplate"
          scope="singleton">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="docInfoJdbcTemplate"
          class="com.ajobs.impdaos.DocInfoJdbcTemplate"
          scope="singleton">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="titleDictumDiagramInfoJdbcTemplate"
          class="com.ajobs.impdaos.TitleDictumDiagramInfoJdbcTemplate"
          scope="singleton">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <!--    评论操作-->
    <bean id="commentInfoJdbcTemplate"
          class="com.ajobs.impdaos.CommentInfoJdbcTemplate"
          scope="singleton">
        <property name="dataSource" ref="commentDataSource"/>
    </bean>
</beans>